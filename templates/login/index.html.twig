{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<div>
		<div class="row">
			<div class="col-md-5 login-image d-md-block">
				<img src="{{ asset('images/left-col.png') }}" alt="">
			</div>

			<div class="col-md-7 d-flex align-items-center justify-content-center">
				<div
					class="w-100" style="max-width: 450px;">
					<!-- Header -->
					<div class="mb-4 position-relative">
						<h2 class="text-dark mb-1">Welcome</h2>
						<p class="text-secondary">Please enter your details</p>
					</div>

					<!-- Google Sign In -->
					<div class="mb-4 position-relative">
						<button class="btn btn-outline-secondary w-100 py-2 rounded-3 d-flex align-items-center justify-content-center">
							<img src="{{ asset('images/google-logo.png') }}" width="20" class="me-2" alt="Google">
							Sign in with Google
						</button>
					</div>

					<!-- Divider -->
					<div class="d-flex align-items-center mb-4 position-relative">
						<hr class="flex-grow-1">
						<span class="mx-3 text-secondary">or continue with email</span>
						<hr class="flex-grow-1">
					</div>

					<!-- Form Start -->
					{{ form_start(form, {'attr': {'class': 'position-relative'}}) }}

					<!-- Email Field -->
					<div class="mb-3 position-relative">
						{{ form_label(form.email, null, {'label_attr': {'class': 'form-label text-dark'}}) }}
						{{ form_widget(form.email, {'attr': {
                                'class': 'form-control py-2',
                                'placeholder': 'Enter your email'
                            }}) }}
					</div>

					<!-- Password Field -->
					<div class="mb-3 position-relative">
						{{ form_label(form.password, null, {'label_attr': {'class': 'form-label text-dark'}}) }}
						{{ form_widget(form.password, {'attr': {
                                'class': 'form-control py-2',
                                'placeholder': 'Enter your password'
                            }}) }}
					</div>

					<!-- Remember Me & Forgot Password -->
					<div class="d-flex justify-content-between align-items-center mb-4 position-relative">
						<div class="form-check">
							{{ form_widget(form.remember_me, {'attr': {'class': 'form-check-input'}}) }}
							{{ form_label(form.remember_me, null, {'label_attr': {'class': 'form-check-label'}}) }}
						</div>
						<a href="#" class="text-decoration-none" style="color: #6c5ce7;">Forgot password?</a>
					</div>

					<!-- Sign In Button -->
					{{ form_widget(form.submit, {'attr': {
                            'class': 'btn w-100 py-2 rounded-3 text-white',
                            'style': 'background-color: #6c5ce7;'
                        }}) }}

					{{ form_end(form) }}

					<!-- Create Account -->
					<div class="text-center position-relative">
						<span class="text-muted">Don't have an account?</span>
						<a href="{{ path('app_signup') }}" class="text-decoration-none ms-1" style="color: #6c5ce7;">Create account</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
