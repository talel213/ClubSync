{% extends 'base.html.twig' %}

{% block title %}Sign Up
{% endblock %}

{% block body %}
	<div>
		<div class="row">
			<div class="col-md-5 login-image d-md-block">
				<img src="{{ asset('images/left-col.png') }}" alt="">
			</div>

			<div class="col-md-7 d-flex align-items-center justify-content-center">
				<div
					class="w-100" style="max-width: 450px;">
					<!-- Header -->
					<div class="mb-4 position-relative">
						<h2 class="text-dark mb-1">Welcome</h2>
						<p class="text-secondary">Please enter your details</p>
					</div>

					<!-- Google Sign Up -->
					<div class="mb-4 position-relative">
						<button class="btn btn-outline-secondary w-100 py-2 rounded-3 d-flex align-items-center justify-content-center">
							<img src="{{ asset('images/google-logo.png') }}" width="20" class="me-2" alt="Google">
							Sign up with Google
						</button>
					</div>

					<!-- Divider -->
					<div class="d-flex align-items-center mb-4 position-relative">
						<hr class="flex-grow-1">
						<span class="mx-3 text-secondary">or continue with email</span>
						<hr class="flex-grow-1">
					</div>

					{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

					<!-- Username Field -->
					<div class="mb-3 position-relative">
						{{ form_label(form.username, null, {'label_attr': {'class': 'form-label text-dark'}}) }}
						{{ form_widget(form.username, {
                            'attr': {
                                'class': 'form-control py-2',
                                'placeholder': 'Enter your username'
                            }
                        }) }}
						{{ form_errors(form.username) }}
					</div>

					<!-- Email Field -->
					<div class="mb-3 position-relative">
						{{ form_label(form.email, null, {'label_attr': {'class': 'form-label text-dark'}}) }}
						{{ form_widget(form.email, {
                            'attr': {
                                'class': 'form-control py-2',
                                'placeholder': 'Enter your email'
                            }
                        }) }}
						{{ form_errors(form.email) }}
					</div>

					<!-- Password Field -->
					<div class="mb-3 position-relative">
						{{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'form-label text-dark'}}) }}
						{{ form_widget(form.plainPassword.first, {
                            'attr': {
                                'class': 'form-control py-2',
                                'placeholder': 'Enter your password'
                            }
                        }) }}
					</div>

					<!-- Confirm Password Field -->
					<div class="mb-4 position-relative">
						{{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'form-label text-dark'}}) }}
						{{ form_widget(form.plainPassword.second, {
                            'attr': {
                                'class': 'form-control py-2',
                                'placeholder': 'Confirm your password'
                            }
                        }) }}
						{{ form_errors(form.plainPassword) }}
					</div>

					<!-- Sign Up Button -->
					<div class="mb-3 position-relative">
						<button type="submit" class="btn w-100 py-2 rounded-3 text-white" style="background-color: #6c5ce7;">
							Sign up
						</button>
					</div>

					{{ form_end(form) }}

					<!-- Already have account -->
					<div class="text-center position-relative">
						<span class="text-muted">Already have an account?</span>
						<a href="{{ path('app_login') }}" class="text-decoration-none ms-1" style="color: #6c5ce7;">Log in</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
