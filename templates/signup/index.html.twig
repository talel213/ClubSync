{% extends 'base.html.twig' %}

{% block title %}Sign Up
{% endblock %}

{% block body %}
	<div>
		<div class="row">
			<div class="col-md-5 login-image d-md-block">
				<img src="{{ asset('images/left-col.png') }}" alt="">
			</div>

			<div class="col-md-7 d-flex align-items-center justify-content-center">
				<div
					class="w-100" style="max-width: 450px;">
					<!-- Header -->
					<div class="mb-4 position-relative">
						<h2 class="text-dark mb-1">Welcome</h2>
						<p class="text-secondary">Please enter your details</p>
					</div>

					<!-- Google Sign Up -->
					<div class="mb-4 position-relative">
						<button class="btn btn-outline-secondary w-100 py-2 rounded-3 d-flex align-items-center justify-content-center">
							<img src="{{ asset('images/google-logo.png') }}" width="20" class="me-2" alt="Google">
							Sign up with Google
						</button>
					</div>

					<!-- Divider -->
					<div class="d-flex align-items-center mb-4 position-relative">
						<hr class="flex-grow-1">
						<span class="mx-3 text-secondary">or continue with email</span>
						<hr class="flex-grow-1">
					</div>

					<!-- Username Field -->
					<div class="mb-3 position-relative">
						<label class="form-label text-dark">Username</label>
						<div class="input-group">
							<input type="text" class="form-control py-2" placeholder="Enter your username">
						</div>
					</div>

					<!-- Email Field -->
					<div class="mb-3 position-relative">
						<label class="form-label text-dark">Email</label>
						<div class="input-group">
							<input type="email" class="form-control py-2" placeholder="Enter your email">
						</div>
					</div>

					<!-- Password Field -->
					<div class="mb-3 position-relative">
						<label class="form-label text-dark">Password</label>
						<div class="input-group">
							<input type="password" class="form-control py-2" placeholder="Enter your password">
						</div>
					</div>

					<!-- Confirm Password Field -->
					<div class="mb-4 position-relative">
						<label class="form-label text-dark">Confirm password</label>
						<div class="input-group">
							<input type="password" class="form-control py-2" placeholder="Confirm your password">
						</div>
					</div>

					<!-- Sign Up Button -->
					<div class="mb-3 position-relative">
						<button class="btn w-100 py-2 rounded-3 text-white" style="background-color: #6c5ce7;">Sign up</button>
					</div>

					<!-- Already have account -->
					<div class="text-center position-relative">
						<span class="text-muted">Already have an account?</span>
						<a href="#" class="text-decoration-none ms-1" style="color: #6c5ce7;">Log in</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
