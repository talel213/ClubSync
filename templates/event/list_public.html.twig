{% extends 'base.html.twig' %}

{% block title %}Our Events{% endblock %}

{% block body %}
    {% include "Navbar.html.twig" %}

    <div class="container py-5">
        <h2 class="text-center mb-4">Our Events</h2>
        <p class="text-center mb-5">Discover upcoming events at ISET Rades</p>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for event in events %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="{{ event.name }}" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ event.name }}</h5>
                            <p class="card-text">{{ event.description|length > 100 ? event.description[:100] ~ '...' : event.description }}</p>
                            <a href="{{ path('app_event_show_public', {'id': event.id}) }}" class="btn btn-outline-primary mt-auto">Learn More</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No events available at the moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}