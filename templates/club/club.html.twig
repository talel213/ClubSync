{% extends 'base.html.twig' %}

{% block title %}Our Clubs{% endblock %}

{% block body %}
    <style>
        .hover-link {
            position: relative;
            display: inline-block;
            transition: color 0.3s;
        }
        .hover-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            left: 0;
            bottom: 0;
            background-color: #0d6efd; /* Bootstrap primary */
            transition: width 0.3s;
        }
        .hover-link:hover::after {
            width: 100%;
        }
        .hover-link:hover {
            color: #0d6efd;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4 py-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">Iset Rades</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarMain">
                <ul class="navbar-nav gap-3">
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="{{ path('app_home') }}">Home</a></li>
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="{{ path('app_club_show2') }}">Clubs</a></li>
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="#">Events</a></li>
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="#">Contact</a></li>
                </ul>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_signup') }}" class="btn btn-outline-secondary rounded-pill px-4">Sign up</a>
                <a href="{{ path('app_login') }}" class="btn btn-primary rounded-pill px-4">Login</a>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <h2 class="text-center mb-4">Our Clubs</h2>
        <p class="text-center mb-5">Join our vibrant community of student clubs and organizations</p>

        <div class="row row-cols-1 row-cols-md-4 g-4">
            {% for club in clubs %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="{{ asset('uploads/' ~ club.image) }}" class="card-img-top" alt="{{ club.name }}" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ club.name|capitalize }}</h5>
                            <p class="card-text">{{ club.description|length > 100 ? club.description[:100] ~ '...' : club.description }}</p>
                            <div class="mt-auto d-flex gap-2">
                                <a href="#" class="btn btn-primary w-50">Join Now</a>
                                <a href="{{ path('app_club_show_details', {'id': club.id}) }}" class="btn btn-outline-primary w-50">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No clubs available at the moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
