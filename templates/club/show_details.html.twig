{% extends 'base.html.twig' %}

{% block title %}{{ club.name }} - Details{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4 py-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">Iset Rades</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarMain">
                <ul class="navbar-nav gap-3">
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="{{ path('app_home') }}">Home</a></li>
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="{{ path('app_club_show2') }}">Clubs</a></li>
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="#">Events</a></li>
                    <li class="nav-item"><a class="nav-link hover-link text-dark fw-medium" href="#">Contact</a></li>
                </ul>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_signup') }}" class="btn btn-outline-secondary rounded-pill px-4">Sign up</a>
                <a href="{{ path('app_login') }}" class="btn btn-primary rounded-pill px-4">Login</a>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container py-5">
        <!-- Club Header -->
        <div class="row mb-5">
            <div class="col-md-12 text-center">
                <h2 class="display-4 text-primary">{{ club.name|capitalize }}</h2>
                <p class="lead text-muted">{{ club.description }}</p>
            </div>
        </div>

        <div class="row mb-5">
            <!-- Club Image and Details -->
            <div class="col-md-6 mb-4">
                <img src="{{ asset('uploads/' ~ club.image) }}" class="img-fluid rounded shadow-lg" alt="{{ club.name }}">
            </div>
            <div class="col-md-6">
                <h3 class="mb-4 text-secondary">About This Club</h3>
                <p class="text-muted">{{ club.description }}</p>
            </div>
        </div>

        <!-- Events Section -->
        <h3 class="mt-5 mb-4 text-primary">Upcoming Events</h3>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for event in events %}
                <div class="col">
                    <div class="card h-100 shadow-lg border-light rounded">
                        <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="{{ event.name }}" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark">{{ event.name }}</h5>
                            <p class="card-text text-muted">{{ event.description|length > 100 ? event.description[:100] ~ '...' : event.description }}</p>
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-primary mt-auto">Learn More</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center text-muted">No events available for this club.</p>
                </div>
            {% endfor %}
        </div>

        <!-- Back Button -->
        <div class="text-center mt-5">
            <a href="{{ path('app_club_show2') }}" class="btn btn-secondary">Back to Clubs</a>
        </div>
    </div>
{% endblock %}
