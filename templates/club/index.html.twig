{% extends 'base.html.twig' %}

{% block title %}Club index
{% endblock %}
{% block style %}
	<style>
		.sidebar {
			background-color: #D8D8F6 !important;
		}
	</style>
{% endblock %}
{% block body %}

	<div class="container-fluid">
		<div class="row">
			<nav class="sidebar col-12 col-md-3 col-lg-2  p-3 ">
				<div class="sidebar-logo mb-4 px-3">ClubHub</div>
				<ul class="nav flex-column">
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_dashboard') }}">
							<i class="bi bi-house"></i>
							Dashboard
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active text-purple" href="#">
							<i class="bi bi-collection"></i>
							Clubs
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">
							<i class="bi bi-calendar-event"></i>
							Events
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">
							<i class="bi bi-gear"></i>
							Settings
						</a>
					</li>
				</ul>
			</nav>
			<main class="col-12 col-md-9 col-lg-10 p-4">
				<h1>Club index</h1>

				<table class="table">
					<thead>
						<tr></tr>
					</thead>
					<tbody></tbody>
				</table>

				<a href="{{ path('app_club_new') }}">Create new</a>
			</main>
			<main class="col-12 col-md-9 col-lg-10 p-4">
				<div class="d-flex justify-content-between align-items-center mb-4">
					<h1>Clubs Management</h1>
					<div class="d-flex gap-3 align-items-center">
						<div class="input-group" style="width: 300px;">
							<input type="text" class="form-control" placeholder="Search clubs...">
							<button class="btn btn-outline-secondary">
								<i class="fas fa-search"></i>
							</button>
						</div>
						<select class="form-select" style="width: 120px;">
							<option>Filter</option>
						</select>
						<a href="#" class="btn btn-purple">
							<i class="fas fa-plus me-2"></i>
							Add Club
						</a>
					</div>
				</div>

				<table class="table table-hover align-middle">
					<thead class="text-secondary">
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Members</th>
							<th>President</th>
							<th>Foundation</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for club in clubs %}
							<tr>
								<td class="fw-bold">{{ club.id }}</td>
								<td>{{ club.Name }}</td>
								<td>{{ club.Members }}</td>
								<td>{{ club.President }}</td>
								<td>{{ club.Foundation ? club.Foundation|date('Y-m-d') : '' }}</td>
								<td>
									{% if club.status == 'Active' %}
										<span class="badge bg-success status-badge">Active</span>
									{% else %}
										<span class="badge bg-danger status-badge">inactive</span>
									{% endif %}
								</td>
								<td>
									<a href="{{ path('app_club_show', {'id': club.id}) }}" class="btn btn-success">show</a>
									<a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-primary">edit</a>
									<a href="{{ path('app_club_delete', {'id': club.id}) }}" class="btn btn-danger">delete</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="7" class="text-center py-4">No clubs found.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="d-flex justify-content-between align-items-center mt-4">
					<span class="text-secondary">
						Showing 1 to
						{{ clubs|length }}
						of
						{{ total_clubs }}
						entries
					</span>
					<div class="btn-group">
						<button class="btn btn-outline-secondary btn-sm">Previous</button>
						<button class="btn btn-primary btn-sm">1</button>
						<button class="btn btn-outline-secondary btn-sm">Next</button>
					</div>
				</div>
			</main>
		</div>
	</div>
{% endblock %}
