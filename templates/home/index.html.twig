{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
	<style>
		.hover-link {
			position: relative;
			display: inline-block;
			transition: color 0.3s;
		}
		.hover-link::after {
			content: '';
			position: absolute;
			width: 0;
			height: 2px;
			left: 0;
			bottom: 0;
			background-color: #0d6efd; /* Bootstrap primary */
			transition: width 0.3s;
		}
		.hover-link:hover::after {
			width: 100%;
		}
		.hover-link:hover {
			color: #0d6efd;
		}
	</style>

	{% include "Navbar.html.twig" %}


	<div class="py-5" style="background: linear-gradient(to right, #5c6b82, #d8d8d8); color: white;">
		<div class="container">
			<div class="row align-items-center" style="min-height: 300px;">
				<div class="col-md-8">
					<h1 class="display-5 fw-semibold">Discover Your Passion at<br>ISET Rades</h1>
					<p class="lead">Join Our Vibrant Community of Clubs and Events</p>
					<a href="{{ path('app_club_show2') }}" class="btn btn-primary mt-3 px-4 py-2 rounded-pill shadow-sm">Explore Clubs</a>
				</div>
			</div>
		</div>
	</div>

	<div class="container py-5">
		<h4 class="mb-4 fw-semibold">Popular Clubs</h4>
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
			{% for club in [
				{'image':'enactus-logo.png', 'title':'Enactus', 'desc':'Explore the latest in technology and innovation'},
				{'image':'IEEE.png', 'title':'IEEE', 'desc':'Build the future with hands-on engineering projects'},
				{'image':'D.png', 'title':'Robotics Club', 'desc':'Design and build amazing robots'},
				{'image':'R.png', 'title':'Digital Arts Club', 'desc':'Express creativity through digital media'}
			] %}
				<div class="col">
					<div class="card h-100 border-0 shadow-sm">
						<img src="{{ asset('images/' ~ club.image) }}" class="card-img-top" alt="{{ club.title }}">
						<div class="card-body d-flex flex-column text-center">
							<h6 class="card-title fw-bold mb-1">{{ club.title }}</h6>
							<p class="card-text small text-muted">{{ club.desc }}</p>
							<div class="mt-auto">
								<a href="{{ path('app_club_show2') }}" class="btn btn-primary btn-sm w-100 rounded-pill">Join Now</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div style="background-color: #F5F9FF;">
		<div class="container py-5">
			<h4 class="mb-4 fw-semibold">Upcoming Events</h4>
			<div
				class="row row-cols-1 row-cols-md-3 g-4">
				<!-- Event Cards -->
				{% for event in [
                {'image':'hackaton.png', 'title':'Hackathon', 'date':'March 15, 2024 – 10:00 AM', 'place':'Main Auditorium'},
                {'image':'web.webp', 'title':'Web development', 'date':'March 20, 2024 – 2:00 PM', 'place':'Engineering Lab'},
                {'image':'l.png', 'title':'Leadership Summit', 'date':'March 25, 2024 – 3:00 PM', 'place':'Art Gallery'}
            ] %}
					<div class="col">
						<div class="card h-100 border-0 shadow-sm">
							<img src="{{ asset('images/' ~ event.image) }}" class="card-img-top" alt="{{ event.title }}">
							<div class="card-body d-flex flex-column">
								<h6 class="fw-bold mb-2">{{ event.title }}</h6>
								<p class="mb-1 text-muted">
									<i class="bi bi-calendar-event me-2"></i>
									{{ event.date }}</p>
								<p class="text-muted mb-3">
									<i class="bi bi-geo-alt me-2"></i>
									{{ event.place }}</p>
								<div class="mt-auto">
									<a href="#" class="btn btn-primary w-100 rounded-pill">Register Now</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

	<div class="container py-5">
		<div class="row text-center">
			<div class="col-6 col-md-3 mb-4 mb-md-0">
				<i class="bi bi-people-fill text-primary fs-2 mb-2"></i>
				<h5 class="fw-bold mb-0">15+</h5>
				<p class="text-muted mb-0">Active Clubs</p>
			</div>
			<div class="col-6 col-md-3 mb-4 mb-md-0">
				<i class="bi bi-people text-primary fs-2 mb-2"></i>
				<h5 class="fw-bold mb-0">500+</h5>
				<p class="text-muted mb-0">Student Members</p>
			</div>
			<div class="col-6 col-md-3 mb-4 mb-md-0">
				<i class="bi bi-calendar-event-fill text-primary fs-2 mb-2"></i>
				<h5 class="fw-bold mb-0">50+</h5>
				<p class="text-muted mb-0">Annual Events</p>
			</div>
			<div class="col-6 col-md-3">
				<i class="bi bi-trophy-fill text-primary fs-2 mb-2"></i>
				<h5 class="fw-bold mb-0">95%</h5>
				<p class="text-muted mb-0">Success Rate</p>
			</div>
		</div>
	</div>

	<section class="py-5" style="background-color: #F5F9FF;">
		<div class="container text-center">
			<h5 class="fw-semibold mb-2">Stay Updated</h5>
			<p class="text-muted mb-4">Subscribe to our newsletter for the latest updates on clubs and events</p>
			<form class="row justify-content-center">
				<div class="col-md-4 mb-2 mb-md-0">
					<input type="email" class="form-control rounded-pill px-4" placeholder="Enter your email">
				</div>
				<div class="col-auto">
					<button type="submit" class="btn btn-primary rounded-pill px-4">Subscribe</button>
				</div>
			</form>
		</div>
	</section>

	<footer style="background-color: #0a2342;" class="text-white py-5">
		<div class="container">
			<div class="row gy-4">
				<div class="col-md-3">
					<h6 class="fw-semibold mb-3">About ISET Rades</h6>
					<p class="small text-white-50 mb-0">Leading institution for technology and engineering education, fostering innovation and excellence.</p>
				</div>
				<div class="col-md-3">
					<h6 class="fw-semibold mb-3">Quick Links</h6>
					<ul class="list-unstyled small">
						<li>
							<a href="#" class="text-white-50 text-decoration-none d-block mb-1">About Us</a>
						</li>
						<li>
							<a href="#" class="text-white-50 text-decoration-none d-block mb-1">Clubs</a>
						</li>
						<li>
							<a href="#" class="text-white-50 text-decoration-none d-block mb-1">Events</a>
						</li>
						<li>
							<a href="#" class="text-white-50 text-decoration-none d-block">Contact</a>
						</li>
					</ul>
				</div>
				<div class="col-md-3">
					<h6 class="fw-semibold mb-3">Contact Info</h6>
					<p class="small text-white-50 mb-2">
						<i class="bi bi-geo-alt-fill me-2"></i>Rades, Tunisia</p>
					<p class="small text-white-50 mb-0">
						<i class="bi bi-envelope-fill me-2"></i>contact@isetrades.tn</p>
				</div>
				<div class="col-md-3">
					<h6 class="fw-semibold mb-3">Follow Us</h6>
					<div class="d-flex gap-2">
						<a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 32px; height: 32px; background-color: #1d4ed8;">
							<i class="bi bi-facebook text-white"></i>
						</a>
						<a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 32px; height: 32px; background-color: #1d4ed8;">
							<i class="bi bi-twitter text-white"></i>
						</a>
						<a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 32px; height: 32px; background-color: #1d4ed8;">
							<i class="bi bi-linkedin text-white"></i>
						</a>
						<a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 32px; height: 32px; background-color: #1d4ed8;">
							<i class="bi bi-instagram text-white"></i>
						</a>
					</div>
				</div>
			</div>
			<div class="text-center mt-4 small text-white-50">
				© 2024 ISET Rades. All rights reserved.
			</div>
		</div>
	</footer>
{% endblock %}
